<div class = "container">
	
	<article>
		<header>
		<p>	
		<strong><%= @car.brand %></strong>
		</p>
		</header>
		<p>
		<strong> Model </strong>	
		<%= @car.model %>
		</p>

		<p>
		<strong>Price: </strong>	
		<%= @car.price %>	
		</p>
	
		<p>
		<strong>Rating: </strong>	
		<%= @car.rating %>
		</p>

		<p>
		<strong>Description: </strong>
		<%= @car.description %>
		</p>
	</article>

	<%= link_to ("Edit Car"), edit_car_path(@car) %> |
	<%= link_to ("Delete Car"), car_path(@car), method: :delete, data: {confirm: "Are you sure?"} %> 
</div>