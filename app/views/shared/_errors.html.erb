<% if object.errors.any? %>
<header>
	<h2>
		Oops! The <%= object.class.name.titleize.downcase %> could not be saved.
	</h2>

	<h3>
		Please correct the following <%= pluralize(object.errors.count, "errors") %>
	</h3>

	<ul>
		<% object.errors.full_messages.each do |message| %>
		<li><%= message %> </li>
		<% end %>
	</ul>

<% end %>