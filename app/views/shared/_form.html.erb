<div class = "container">	
	<%= form_for(@car) do |f|%>
		<%= render "shared/errors", object: @car %>
		<p>
			<%=f.label :brand %>
			<%=f.select :brand, Car::BRANDS, prompt: "Pick One" %>
		</p>	

		<p>
			<%=f.label :model %>
			<%=f.text_field :model %>
		</p>

		<p>
			<%=f.label :price %>
			<%=f.text_field :price %>
		</p>

		<p>
			<%=f.label :rating %>	
			<%= f.select :rating, Car::RATINGS, prompt: "Pick One" %>
		</p>
		</p>

		<p>
			<%= f.label :description %>
			<%= f.text_area :description %>
		</p>

		<p>
			<%= f.submit %> |
			<%= link_to ("Cancel"), root_path %>
		</p>
	<% end %>
</div>